{
    "name": "eb-tokens-api",
    "version": "0.0.1",
    "description": "A REST API for generating and validating Echobind Tokens.",
    "scripts": {
        "server:start": "NODE_ENV=production node server/app.js",
        "server:start:test": "NODE_ENV=testing nodemon -L --watch ./server ./server/app.js",
        "server:start:dev": "NODE_ENV=development nodemon -L --watch ./server ./server/app.js -- --envFile=secrets/env.dev",
        "test": "jest ./server",
        "lint": "esw --watch --color ./server"
    },
    "author": "Cully Larson <cully.larson@gmail.com>",
    "_moduleAliases": {
        "@@app": "./server"
    },
    "jest": {
        "moduleNameMapper": {
            "^@@app(.*)$": "<rootDir>/server$1"
        }
    },
    "devDependencies": {
        "eslint": "^7.25.0",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-watch": "^7.0.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "standard": "^16.0.3"
    },
    "dependencies": {
        "@cullylarson/f": "^0.1.2",
        "cors": "^2.8.5",
        "crypto-random-string": "^4.0.0",
        "dotenv": "^8.3.0",
        "express": "^4.17.1",
        "fast-luhn": "^2.0.0",
        "module-alias": "^2.2.2",
        "yargs": "^15.4.1"
    }
}
